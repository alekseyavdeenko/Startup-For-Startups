extends layout

block content
	include header
	#account-form-container.center-vertical
		include validationErrors

		form(method='post',action='adduser')#account-form.form-horizontal.well
			h2 Welcome to Boost Up!
			p Please fill out the form below
			hr
			.form-group
				label.control-label.col-sm-3 Name
				.col-sm-9
					input.form-control#name-tf(type='text', name='user')

			.form-group
				label.control-label.col-sm-3 Login
				.col-sm-9
					input.form-control#email-tf(type='text', name='login')

			.form-group
				label.control-label.col-sm-3 Password
				.col-sm-9
					input.form-control#pass-tf(type='password', name='password', value='')

			.form-group
				label.control-label.col-sm-3 Confirm Password
				.col-sm-9
					input.form-control#pass-tf(type='password', name='confirm_password', value='')

			hr
			.form-buttons
				button(type='submit')#account-form-btn2.btn.btn-primary Sign Up

			.clearfix
			.policy
				h8 By signing up, you agree to the Terms of Service and Privacy Policy, including Cookie Use. Others will be able to find you by email or phone number when provided